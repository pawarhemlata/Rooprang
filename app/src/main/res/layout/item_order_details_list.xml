<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/White">


        <ImageView
            android:id="@+id/img_yourorder_list"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/boy"
         android:layout_marginTop="10dp"
            android:scaleType="fitCenter"/>


        <TextView
            android:id="@+id/tv_yourorder_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_yourorder_list"
            android:layout_marginTop="10dp"
            android:text="Product Title"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/tv_yourorder_list_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_yourorder_list_title"
            android:padding="2dp"
            android:layout_toRightOf="@id/img_yourorder_list"
            android:text="Quantity"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>



        <TextView
            android:id="@+id/tv_yourorder_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_yourorder_list_qty"
            android:padding="2dp"
            android:layout_toRightOf="@id/img_yourorder_list"
            android:text="550"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_rupee"
            android:textColor="@color/dark_gray"/>


        <TextView
            android:id="@+id/tv_yourorderoriginal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_yourorder_list_qty"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_yourorder_list_price"
            android:text="550"
            android:textSize="13sp"
            android:drawableLeft="@drawable/ic_rupee_indian"
            android:textColor="@color/dark_gray"/>


    </RelativeLayout>


</LinearLayout>