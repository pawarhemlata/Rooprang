<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SORT BY"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="12dp"
        android:padding="10dp"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:id="@+id/tvsortby"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/vline"
        android:layout_below="@+id/tvsortby"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="7dp"
        android:id="@+id/rlpopularity"
        android:layout_below="@+id/vline"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="POPULARITY"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/cbpopularity"
            android:enabled="false"
            android:padding="5dp"
            android:buttonTint="@color/black"
            android:layout_centerVertical="true"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="7dp"
        android:id="@+id/rllowtohigh"
        android:layout_below="@+id/rlpopularity"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="PRICE--LOW TO HIGH"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/cblowtohigh"
            android:buttonTint="@color/black"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:padding="5dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="7dp"
        android:id="@+id/rlhightolow"
        android:layout_below="@+id/rllowtohigh"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="PRICE HIGH TO LOW"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/cbhightolow"
            android:buttonTint="@color/black"
            android:enabled="false"
            android:padding="5dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rlnewest"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/rlhightolow"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="NEWEST FIRST"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:buttonTint="@color/black"
            android:id="@+id/cbnewest"
            android:padding="5dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>