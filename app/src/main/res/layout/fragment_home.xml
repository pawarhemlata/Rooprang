<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalscrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_cat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:scrollbars="none" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_categry_all"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/allcategry"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/tv_categry_all"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="@string/all"
                                android:textColor="@color/pink_text"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_categry_expecting"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/expectingmother"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/tv_categry_expecting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:minLines="2"
                                android:text="@string/expectong_mother"
                                android:textColor="@color/pink_text"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_categry_new_born"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/newborn"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/tv_categry_new_born"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="@string/new_born"
                                android:textColor="@color/pink_text"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_categry_baby_boy"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/baby_boy"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/tv_categry_baby_boy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="@string/baby_boy"
                                android:textColor="@color/pink_text"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/linear_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/iv_categry_baby_girl"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/baby_girl"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/tv_categry_baby_girl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="@string/baby_girl"
                                android:textColor="@color/pink_text"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:cardCornerRadius="8dp">


                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/slider_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="right"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="800"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="3"
                        app:sliderStartAutoCycle="true" />


                </androidx.cardview.widget.CardView>


                <!-- <androidx.viewpager.widget.ViewPager
                     android:id="@+id/slider_pager"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_alignParentTop="true"
                     android:padding="2dp" />

                 <com.viewpagerindicator.CirclePageIndicator
                     android:id="@+id/indicator"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_centerHorizontal="true"
                     android:gravity="bottom"
                     android:padding="10dip"
                     app:centered="true"
                     app:fillColor="#F37D8A"
                     app:pageColor="#FDE7EA"
                     app:snap="false" />-->

            </RelativeLayout>

            <!-- Deal of the days -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@color/colorskyblue"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tvDealOftheDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kaushanscript_regular"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Deal of The Day"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvremaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDealOftheDays"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="20h 08m remaining"
                        android:textColor="@color/white"
                        android:textSize="14.5sp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:id="@+id/txt_dod_view_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kaushanscript_regular"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:text="@string/view_all"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="2dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/r1"
                android:layout_marginTop="2dp"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/r1"
                    android:layout_marginTop="2dp"

                    >

                    <TextView
                        android:id="@+id/tv_baby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/kaushanscript_regular"
                        android:padding="5dp"
                        android:text="@string/shopbycategory"
                        android:textColor="@color/pink_text"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_baby"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#ffffff"
                            android:padding="2dp"
                            app:cardCornerRadius="3dp">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_shop_by_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="2dp"

                                />
                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/view_all_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/view_all"
                        android:textColor="@color/light_g"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>


                <View
                    android:id="@+id/v"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/layout1"
                    android:layout_marginTop="1dp"
                    android:background="@color/view"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_banner_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/kaushanscript_regular"
                        android:gravity="center"
                        android:textColor="@color/pink_text"
                        android:textSize="21sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/iv_summer"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/no_image"></ImageView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_kids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/kaushanscript_regular"
                        android:padding="5dp"
                        android:text="@string/bloominstyle"
                        android:textColor="@color/pink_text"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_kids"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#ffffff"
                            android:padding="2dp"
                            app:cardCornerRadius="3dp">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view__bloom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="2dp"

                                />
                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/view_all_kids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/view_all"
                    android:textColor="@color/light_g"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_banner_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/iv_banner_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"></ImageView>
            </LinearLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layout4"
                android:layout_marginTop="1dp"
                android:background="@color/gray" />


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trending_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:padding="5dp"
                    android:text="@string/Trending_now"
                    android:textColor="@color/pink_text"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/view_all_trendy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/kaushanscript_regular"
                        android:gravity="center_vertical"
                        android:paddingTop="3dp"
                        android:text="@string/view_all"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_trendy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_trending_now"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"

                    android:scrollbars="vertical" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_banner_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:gravity="center"
                    android:textColor="@color/pink_text"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"></ImageView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_banner_three"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:padding="2dp"
                    android:text="@string/latest_products"
                    android:textColor="@color/pink_text"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_all_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:paddingTop="3dp"
                    android:text="@string/view_all"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_latest_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:scrollbars="vertical" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_banner_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:gravity="center"
                    android:textColor="@color/pink_text"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_stripe"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"></ImageView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_banner_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:gravity="center"
                    android:textColor="@color/pink_text"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_banner_three"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"></ImageView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_banner_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/kaushanscript_regular"
                    android:gravity="center"
                    android:textColor="@color/pink_text"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_sale_banner"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_below="@+id/layout3"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"></ImageView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>