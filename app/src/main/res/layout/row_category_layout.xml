<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_categry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:background="#32E9E9E9"
        android:elevation="2dp"
        android:layout_margin="5dp"
       >
        <LinearLayout
            android:id="@+id/layout_super_catgry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/relative_cat"
            android:layout_weight="0.25"

            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_super_categry"
                    android:text="Category"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_size_catgry"
                    android:layout_below="@+id/tv_super_categry"
                    android:text="(0-2 year)"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/relative_cat1"
                android:layout_weight="0.75"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_super_catgry"
                    android:padding="5dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    ></ImageView>


            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>