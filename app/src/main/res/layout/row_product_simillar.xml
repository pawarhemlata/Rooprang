<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_horz"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:elevation="1dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/thumbnail_horz"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="5dp"
                android:scaleType="centerInside" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbbanner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/tv_title_horz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_horz"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="sdfs"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_horz"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/bubble">

                <TextView
                    android:id="@+id/tv_price_horz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/rupee_white"
                    android:drawablePadding="2dp"
                    android:padding="5dp"
                    android:drawableTintMode="@color/white"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_price_horz"
                    android:padding="5dp"
                    android:textColor="@color/gray"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_actual_price"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
